{% extends 'base.html.twig' %}
{% block admin_nav %}active{% endblock %}

{% block body %}

    <h1>User</h1>

    <div class="row">
        <div class="col-sm-2 col-sm-offset-9">
            <a href="{{ path('add_user') }}"><button type="submit" class="btn btn-default">Add User</button></a>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
            <div class="row">
                <div class="col-sm-3">Nom</div>
                <div class="col-sm-3">Prenom</div>
                <div class="col-sm-3">Email</div>
                <div class="col-sm-2">Role</div>
            </div>
        </div>
    </div>

    {% for user in users %}
        {% if user.role != "ROLE_SUPER_ADMIN" and user.id != userID %}
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1">
                    <div class="row">
                        <div class="col-sm-3">
                            {{ user.firstname }}
                        </div>
                        <div class="col-sm-3">
                            {{ user.lastname }}
                        </div>
                        <div class="col-sm-3">
                            {{ user.email }}
                        </div>
                        <div class="col-sm-2">
                            {{ user.role }}
                        </div>
                        <div class="col-sm-1 pull-right">
                            <a href="{{ path('delete_user', { 'id': user.id }) }}"><button type="submit" class="btn btn-default glyphicon glyphicon glyphicon-ok-circle"></button></a>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    {% endfor %}

{% endblock %}