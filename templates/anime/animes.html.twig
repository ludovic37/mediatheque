{% extends 'base.html.twig' %}
{% block anime_nav %}active{% endblock %}
{% block title %} {{ parent() }} - Anime {% endblock %}

{% block body %}

    {% for message in app.session.flashBag.get("delete") %}
        {{ message }}
    {% endfor %}
    {% for message in app.session.flashBag.get("update") %}
        {{ message }}
    {% endfor %}
    {% for message in app.session.flashBag.get("ajout") %}
        {{ message }}
    {% endfor %}

    <div class="row">
        <div class="col-sm-2 col-sm-offset-9">
            <a href="{{ path('add_anime') }}">
                <button type="submit" class="btn btn-default">Add Anime</button>
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
            {% for anime in animes %}
                <div class="col-sm-6 panel panel-default">
                    <div class="row panel-heading">
                        <h3 class="col-sm-9" style="margin: 0; font-size: medium">{{ anime.name }}</h3>
                        <div class="col-sm-3">
                            <a href="{{ path('detail_anime', { 'id': anime.id }) }}">
                                <button type="submit"
                                        class="btn btn-default btn-xs glyphicon glyphicon-eye-open"></button>
                            </a>
                            <a href="{{ path('edit_anime', { 'id': anime.id }) }}">
                                <button type="submit" class="btn btn-default btn-xs glyphicon glyphicon-edit"></button>
                            </a>
                            <a href="{{ path('delete_anime', { 'id': anime.id }) }}">
                                <button type="submit"
                                        class="btn btn-default btn-xs glyphicon glyphicon-trash"></button>
                            </a>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="col-xs-8 col-sm-3">
                            <img src="{{ anime.img }}" width="90" height="135">
                        </div>

                        <p>{{ anime.description|slice(0, 200) }}...</p>
                    </div>
                </div>

            {% endfor %}
        </div>
    </div>

{% endblock %}