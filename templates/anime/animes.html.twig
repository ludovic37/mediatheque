{% extends 'base.html.twig' %}
{% block anime_nav %}active{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-2 col-sm-offset-9">
            <a href="{{ path('add_anime') }}"><button type="submit" class="btn btn-default">Add Anime</button></a>
        </div>
    </div>

    {% for anime in animes %}
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                <div class="row">
                    <div class="col-xs-8 col-sm-2">
                        <img src="{{ anime.img }}" width="100" height="150">
                    </div>
                    <div class="col-xs-4 col-sm-10">
                        <h2>{{ anime.name }}</h2>
                        <a href="{{ path('detail_anime', { 'id': anime.id }) }}"><button type="submit" class="btn btn-default glyphicon glyphicon-eye-open"></button></a>
                        <a href="{{ path('edit_anime', { 'id': anime.id }) }}"><button type="submit" class="btn btn-default glyphicon glyphicon-edit"></button></a>
                        <a href="{{ path('delete_anime', { 'id': anime.id }) }}"><button type="submit" class="btn btn-default glyphicon glyphicon-remove"></button></a>
                        <p>{{ anime.description|slice(0, 200) }}...</p>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}

{% endblock %}