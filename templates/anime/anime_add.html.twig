{% extends 'base.html.twig' %}
{% block anime_nav %}active{% endblock %}
{% block title %} {{ parent() }} - Anime {% endblock %}

{% block body %}

    <div class="col-sm-offset-2 col-sm-10">
        <h1>Ajout d'un anime</h1>
    </div>

    <div class="form-horizontal">
        {{ form_start(formulaire) }}
        <div class="form-group">
            <label for="title" class="col-sm-2 control-label">Titre</label>
            <div class="col-sm-10">
                {{ form_widget(formulaire.name) }}
            </div>
            {{ form_errors(formulaire.name) }}
        </div>

        <div class="form-group">
            <label for="title" class="col-sm-2 control-label">{{ form_label(formulaire.description) }}</label>
            <div class="col-sm-10">
                {{ form_widget(formulaire.description) }}
            </div>
            {{ form_errors(formulaire.description) }}
        </div>

        <div class="form-group">
            <label for="title" class="col-sm-2 control-label">{{ form_label(formulaire.img) }}</label>
            <div class="col-sm-10">
                {{ form_widget(formulaire.img) }}
            </div>
            {{ form_errors(formulaire.img) }}
        </div>

        <div class="form-group">
            <label for="title" class="col-sm-2 control-label">{{ form_label(formulaire.categorie) }}</label>
            <div class="col-sm-10">
                {{ form_widget(formulaire.categorie) }}
            </div>
            {{ form_errors(formulaire.categorie) }}
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Save</button>
            </div>
        </div>
        {{ form_end(formulaire) }}
    </div>

{% endblock %}