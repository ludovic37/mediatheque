{% extends 'base.html.twig' %}
{% block serie_nav %}active{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-2 col-sm-offset-9">
            <a href="{{ path('add_serie') }}"><button type="submit" class="btn btn-default">Add Serie</button></a>
        </div>
    </div>


    <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
    {% for serie in series %}

        <div class="col-sm-6 panel panel-default">
            <div class="row panel-heading">
                <h3 class="col-sm-9" style="margin: 0; font-size: medium">{{ serie.name }}</h3>
                <div class="col-sm-3">
                    <a href="{{ path('detail_serie', { 'id': serie.id }) }}">
                        <button type="submit"
                                class="btn btn-default btn-xs glyphicon glyphicon-eye-open"></button>
                    </a>
                    <a href="{{ path('edit_serie', { 'id': serie.id }) }}">
                        <button type="submit" class="btn btn-default btn-xs glyphicon glyphicon-edit"></button>
                    </a>
                    <a href="{{ path('delete_serie', { 'id': serie.id }) }}">
                        <button type="submit"
                                class="btn btn-default btn-xs glyphicon glyphicon-remove"></button>
                    </a>
                </div>
            </div>
            <div class="panel-body">
                <div class="col-xs-8 col-sm-3">
                    <img src="{{ serie.img }}" width="90" height="135">
                </div>

                <p>{{ serie.description|slice(0, 200) }}...</p>
            </div>
        </div>

    {% endfor %}

    </div>
    </div>

{% endblock %}