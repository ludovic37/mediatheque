{% extends 'base.html.twig' %}
{% block film_nav %}active{% endblock %}

{% block body %}
    <div class="row">

        <div class="col-sm-2 col-sm-offset-9">
            <a href="{{ path('add_film') }}">
                <button type="submit" class="btn btn-default">Add Film</button>
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10 col-sm-offset-1">

            {% for film in films %}

                <div class="col-sm-6 panel panel-default">
                    <div class="row panel-heading">
                        <h3 class="col-sm-9" style="margin: 0; font-size: medium">{{ film.name }}</h3>
                        <div class="col-sm-3">
                            <a href="{{ path('detail_film', { 'id': film.id }) }}">
                                <button type="submit"
                                        class="btn btn-default btn-xs glyphicon glyphicon-eye-open"></button>
                            </a>
                            <a href="{{ path('edit_film', { 'id': film.id }) }}">
                                <button type="submit" class="btn btn-default btn-xs glyphicon glyphicon-edit"></button>
                            </a>
                            <a href="{{ path('delete_film', { 'id': film.id }) }}">
                                <button type="submit"
                                        class="btn btn-default btn-xs glyphicon glyphicon-remove"></button>
                            </a>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="col-xs-8 col-sm-3">
                            <img src="{{ film.img }}" width="90" height="135">
                        </div>

                        <p>{{ film.description|slice(0, 200) }}...</p>
                    </div>
                </div>

            {% endfor %}
        </div>
    </div>

{% endblock %}