{% extends 'base.html.twig' %}
{% block film_nav %}active{% endblock %}

{% block body %}
    <div class="row">

        <div class="col-sm-2 col-sm-offset-9">
            <a href="{{ path('add_film') }}"><button type="submit" class="btn btn-default">Add Film</button></a>
        </div>
    </div>
    {# todo 5 dernier film sortie#}
    {% for film in films %}
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                <div class="row">
                    <div class="col-xs-8 col-sm-2">
                        <img src="{{ film.img }}" width="100" height="150">
                    </div>
                    <div class="col-xs-4 col-sm-10">
                        <h2>{{ film.name }}</h2>
                        <a href="{{ path('detail_film', { 'id': film.id }) }}"><button type="submit" class="btn btn-default glyphicon glyphicon-eye-open"></button></a>
                        <a href="{{ path('edit_film', { 'id': film.id }) }}"><button type="submit" class="btn btn-default glyphicon glyphicon-edit"></button></a>
                        <a href="{{ path('delete_film', { 'id': film.id }) }}"><button type="submit" class="btn btn-default glyphicon glyphicon-remove"></button></a>
                        <p>{{ film.description|slice(0, 200) }}...</p>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}

{% endblock %}